@using Portfolio.Models
@using Portfolio.Services
@using Microsoft.AspNetCore.Components.Web
@inject JsonDataService ProjectService

<style type="text/css">

	.fields {
		background-image: url("img/decoration/fields.png");
		background-repeat: repeat-x;
		position: relative;
		width: 100vw;
		height: 13vh;
		background-size: 50%;
		image-rendering: pixelated;
		margin-left: -37vw;
		z-index: -6;
		margin-bottom: -2vh;
		margin-top: -10vh;
	}

	.musicbox{
		   width: 70%;
	}

	@@media (max-width: 768px) {
		.musicbox{
		   width: 95%;
		}

		.hide-mobile{
			display: none;
			height: 0;
			width: 0;
		}
	}
</style>

<div class="container-sm">
	<div class="row row-cols-1">
		@foreach (var art in ProjectService.GetMusic())
		{
			<div style="height: 2vh; width: 68%;" class="hide-mobile mx-auto border-top border-bottom border-3 border-light"></div>
			<div style="height: 2vh; width: 68%;" class="hide-mobile mx-auto border-top border-bottom border-3 border-light"></div>
			<div class="col my-3">
				<div class="card mx-auto border-light mb-3 text-bg-dark bg-black border-3 rounded-0 my-3 musicbox">
					<div>
						<a href="@art.Url">
							<img src="@art.Cover" class="card-img-top" style="object-fit: cover; image-rendering: pixelated;" alt="...">
						</a>
					</div>
					<div class="card-body">
						<h5 class="card-title">@art.Name</h5>
						<p class="card-text fs-6 lh-1">> @art.Genres</p>
						<p class="card-text fs-6 lh-1">> @art.Date</p>
					</div>
				</div>
			</div>

		}
	</div>
</div>
<div>
	<div class="fields"></div>
</div>


