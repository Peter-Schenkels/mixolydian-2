@using Portfolio.Models
@using Portfolio.Services
@using Microsoft.AspNetCore.Components.Web
@inject JsonDataService ProjectService

<div class="container-sm " style=" margin-bottom: 3vh">
	<div class="row row-cols-md-2 ">
		@{foreach (var project in ProjectService.GetMostRecentProjects())
			{
		<div class="col my-3">
			<div class="card h-100 border-light mb-3 text-bg-dark bg-black border-3 rounded-0 my-3">

				<a href="@project.ProjectUrl">
					<img src="@project.BannerImage" class="card-img-top ratio ratio-16x9" style="width: 100%; height: 10vw; object-fit: cover;" alt="...">
				</a>

				<div class="card-body">
					<h5 class="card-title">@project.Name</h5>
					<p class="card-text fs-6 lh-1">> @project.Description</p>

				</div>
				<div class="card-footer">
					<p class="card-text fs-6 lh-1 text-muted">> Last updated: @project.Date</p>
				</div>
			</div>
		</div>
				}
			}
	</div>
	<div>

	</div>
</div>


